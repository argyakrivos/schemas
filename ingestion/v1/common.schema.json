    "classification": {
      "title": "An ordered list of identifiers classifying this entity, most general at index 0.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "realm": {
            "title": "The name of the realm in which this unique identifier exists",
            "enum": [
              "isbn",           // Used to classify books
              "contributor_id", // Used to classify contributors
              "type",           // Used to ensure different types of the same asset don't overwrite (eg. full & sample epubs)
              "source_key"      // A key used to allow a reprocessing of the same file to replace the old version
            ]
          },
          "id": {
            "title": "The value defining the uniqueness of this object within the realm specified. Values here should not clash unless the objects should be merged.",
            "type": "string"
          }
        },
        "required": ["realm", "id"],
        "additionalProperties": false
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "delivered_at": {
          "title": "The ISO 8601 timestamp of when this asset is considered to be valid from.",
          "type": "string",
          "format": "date-time"
        },
        "uri": {
          "title": "The location of the source asset for the metadata described.",
          "type": "string",
          "format": "uri"
        },
        "role": {
          "title": "The role of the source that provided this data.",
          "enum": ["publisher_ftp", "content_manager"]
        },
        "username": {
          "title": "The username of the source entity",
          "type": "string"
        },
        "system": {
          "title": "The system which processed this asset. Not required as the message metadata contains the fallback.",
          "type": "string"
        },
        "processed_at": {
          "title": "The ISO 8601 timestamp of when this asset was processed. Not required as the timestamp of the message is the fallback.",
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["delivered_at", "role", "username"],
      "additionalProperties": false
    },
    "image_media": {
      "title": "This holds info about one or more images and can be applied to a book or a contributor.",
      "type": "object",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "title": "An image media element.",
            "properties": {
              "$ref": "#/definitions/media_item",
              "width": {
                "title": "The width of the image in pixels.",
                "type": "integer"
              },
              "height": {
                "title": "The height of the image in pixels.",
                "type": "integer"
              }
            }
          }//,
          // PICK UP HERE: I just added this
          //"additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "media_item": {
      "title": "All images, epubs, mobis etc are described using this format.",
      "type": "object",
      "properties": {
        "classification":  { "$ref": "common.schema.json#/definitions/classification" },
        "uris": {
          "type": "array",
          "items": {
            "properties": {
              "type": {
                "enum": ["static", "resource_server"]
              },
              "uri": {
                "type": "string",
                "format": "uri"
              },
              "params": {
                "type": "string",
                "format": "resource server params"
              }
            },
            "required": ["type", "uri"],
            "additionalProperties": false
          }
        },
        "size": {
          "title": "The size of the asset in bytes",
          "type": "integer"
        }
      },
      "required": ["classification", "uris", "size"]
    }
  }
}